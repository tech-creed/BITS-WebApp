<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>E News</title>
  <!-- linking the external css file -->
  <link rel="stylesheet" href="/css/index.css">
  <link rel="stylesheet" href="/css/index_navbar.css">
  <link rel="stylesheet" href="/css/authentication_form.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/21/21601.png" type="image/png">
</head>

<body>
  <%- include('../templates/index_navbar.ejs') %>
  <section id="home">
    <div class="container">
      <div class="form">
        <div class="btn">
          <button class="signUpBtn">SIGN UP</button>
          <button class="loginBtn">LOG IN</button>
        </div>
        <form class="signUp" action="/auth/signup" method="post">
          <div class="formGroup">
            <input type="text" id="Name" placeholder="Name" name="name" required autocomplete="off">
          </div>
          <div class="formGroup">
            <input type="email" placeholder="Email ID" name="mail" required autocomplete="off">
          </div>
          <div class="formGroup">
            <input type="text" id="userName" placeholder="User Name" name="username" required autocomplete="off">
          </div>
          <div class="formGroup">
            <input type="password" id="password" placeholder="Password" name="password" required autocomplete="off">
          </div>  
          <div class="formGroup">
            <input type="text" id="category" placeholder="Category (,)Seperated" name="category" required autocomplete="off">
          </div>
          <div class="formGroup">
            <input hidden type="text" id="lat" placeholder="Latitude" name="lat" required autocomplete="off">
            <input hidden type="text" id="long" placeholder="Longitude" name="long" required autocomplete="off">
          </div>
          <div class="formGroup">
            <button type="submit" class="btn2">REGISTER</button>
          </div>

        </form>
        <form class="login" action="/auth/login" method="post">
          <div class="formGroup">
            <input type="text" placeholder="Username" name="username" required autocomplete="off">
          </div>
          <div class="formGroup">
            <input type="password" id="password" placeholder="Password" name="password" required autocomplete="off">
          </div>
          <div class="formGroup">
            <button type="submit" class="btn2">Login</button>
          </div>
        </form>
        <p class="err-msg">
          <% if (error !=null || error!=undefined){%>
          Error : <%=error%>
          <%}%>
            </p>
            <div style="text-align: center;">
                <a href="/auth/reset_feedback">Feedback</a> |
                <a href="/auth/reset_feedback">Forgot Password ?</a>
            </div>
        </div>
    </div>
  </section>
</body>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/js/index_navbar.js"></script>
<script>
  window.alert('Allow Location to get your location news Automatically')
    $('.loginBtn').click(function(){
        $('.login').show();
        $('.signUp').hide();
        /* border bottom on button click */
        $('.loginBtn').css({'border-bottom' : '3px solid #17418a'});
        /* remove border after click */
        $('.signUpBtn').css({'border-style' : 'none'});
    });
    /* Show sign Up form on button click */
    $('.signUpBtn').click(function(){
        $('.login').hide();
        $('.signUp').show();
        /* border bottom on button click */
        $('.signUpBtn').css({'border-bottom' : '3px solid #17418a'});
        /* remove border after click */
        $('.loginBtn').css({'border-style' : 'none'});
    });

    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(showPosition);
    }
    var latVar = document.getElementById("lat");
    var longVar = document.getElementById("long");

    function showPosition(position) {
      console.log(position)
      latVar.value = position.coords.latitude;
      longVar.value = position.coords.longitude;
    }
</script>
</html>
